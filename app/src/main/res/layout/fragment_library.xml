<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/library_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/library_image"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:src="@drawable/not_found"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_toEndOf="@id/library_image">
        <TextView
            android:id="@+id/library_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Произведение 1"/>
        <TextView
            android:id="@+id/Library_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/library_title"
            android:text="Автор 1"/>

        <TextView
            android:id="@+id/library_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Library_author"
            android:text="Прочитано"/>
        <Button
            android:id="@+id/library_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/library_status"
            android:text="Удалить"/>
    </RelativeLayout>



</RelativeLayout>